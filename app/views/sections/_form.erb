<%= error_messages_for(@section) %>

<table summary="Section form fields">
  <tr>
    <th>Page</th>
    <td><%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}) %></td>
  </tr>
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.text_field(:visible) %></td>
  </tr>
  <tr>
    <th>Content Type</th>
    <td><%= f.text_field(:content_type) %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= f.text_field(:content) %></td>
  </tr>
</table>